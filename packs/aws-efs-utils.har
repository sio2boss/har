#! /bin/sh

if [[ $EUID -ne 0 ]]; then
    echo "This script must be run with sudo"
    exit 1
fi

ret=99
cd /tmp && \
    rm -rf efs-utils && \
    git clone https://github.com/aws/efs-utils > /dev/null && \
    cd efs-utils && \
    ./build-deb.sh > /dev/null

if [[ $? -eq 0 ]]; then
    apt install -yqq ./build/amazon-efs-utils*deb
    ret=$?
fi

cd /tmp && rm -rf ./efs-utils

exit $ret