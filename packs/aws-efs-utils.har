#! /bin/bash

if [[ $EUID -ne 0 ]]; then
    echo "This script must be run with sudo"
    exit 1
fi

ret=99
{
    cd /tmp &&
    rm -rf efs-utils &&
    git clone https://github.com/aws/efs-utils &&
    cd efs-utils &&
    ./build-deb.sh
 } >/dev/null 2>&1

if [[ $? -eq 0 ]]; then
    apt install -yqq ./build/amazon-efs-utils*deb >/dev/null 2>&1
    ret=$?
fi

cd /tmp && rm -rf ./efs-utils > /dev/null 2>&1

exit $ret