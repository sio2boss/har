#! /bin/bash

existing=`ls ~/.local/lib/ | grep code-server`
if [[ ! -z "$existing" ]]; then
    sudo chown -R $USER:$USER ~/.local
    rm -rf ~/.local/lib/code-server*
fi

curl -fsSL https://code-server.dev/install.sh | sh -s -- --method=standalone --prefix=~/.local
ret=$?
sudo chown -R $USER:$USER ~/.local
exit $ret