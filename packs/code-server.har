#! /bin/sh

curl -fsSL https://code-server.dev/install.sh | sh -s -- --method=standalone --prefix=~/.local/ \
 && sudo cat > /lib/systemd/system/code-server.service <<EOF
[Unit]
Description=code-server
After=nginx.service

[Service]
Type=simple
Environment=
ExecStart=/usr/bin/code-server --auth none --port 13337 >/tmp/code-server.log 2>&1
Restart=always

[Install]
WantedBy=multi-user.target
EOF

sudo systemctl enable code-server \
 && sudo systemctl start code-server

exit $?