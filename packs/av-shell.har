#! /bin/sh

# Installed already
if [[ ! -z `which av` ]]; then
    echo "av-shell already installed, updating..."
    av update
    exit $?
fi

# Installed but not linked
if [ -d ~/.av ]; then
    echo "reinstalling av-shell..."
    bash ~/.av/install
    exit $?
fi

# Fresh install
git clone --recurse-submodules https://github.com/sio2boss/av-shell ~/.av && bash ~/.av/install

exit $?