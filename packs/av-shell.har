#! /bin/bash

# Installed already
if [[ ! -z `which av` ]]; then
    echo "av-shell already installed, updating..."
    av update --yes
    exit $?
fi

# Installed but not linked
if [ -d ~/.av ]; then
    echo "reinstalling av-shell..."
    zsh ~/.av/install --yes
    exit $?
fi

# Fresh install
git clone --depth=1 https://github.com/sio2boss/av-shell ~/.av && zsh ~/.av/install --yes
exit $?